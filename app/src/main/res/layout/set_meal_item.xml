<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.flyco.roundview.RoundLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_15dp"
        android:orientation="vertical"
        app:rv_backgroundColor="@color/white"
        app:rv_cornerRadius="@dimen/spacing_10dp">


        <RelativeLayout
            android:id="@+id/select_meal_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_10dp">

            <TextView
                android:id="@+id/item_meal_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="套餐名称"
                android:textColor="@color/black" />


            <TextView
                android:id="@+id/item_meal_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_10dp"
                android:layout_toRightOf="@+id/item_meal_name"
                android:text="10.00"
                android:textColor="@color/login_code_bg_wait" />

            <ImageView
                android:id="@+id/item_meal_icon"
                android:layout_width="15dp"
                android:layout_height="5dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/down_icon" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_1dp"
            android:background="#797979" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/item_meal_recycler_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/item_meal_recy2_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_10dp"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/item_meal_recycler_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/set_meal_add_cat_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_2"
                android:layout_marginLeft="@dimen/spacing_15dp"
                android:layout_marginTop="@dimen/spacing_10dp"
                android:layout_marginRight="@dimen/spacing_15dp"
                android:background="@drawable/classify_list_item"
                android:gravity="center"
                android:paddingTop="@dimen/spacing_6dp"
                android:paddingBottom="@dimen/spacing_6dp"
                android:text="加入购物车"
                android:textColor="@color/white"
                android:textSize="@dimen/text_18" />

        </LinearLayout>


    </com.flyco.roundview.RoundLinearLayout>


</LinearLayout>