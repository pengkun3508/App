<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_80">

    <com.flyco.roundview.RoundLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        app:rv_backgroundColor="@color/white"
        app:rv_cornerRadius_TL="@dimen/spacing_15dp"
        app:rv_cornerRadius_TR="@dimen/spacing_15dp">

        <TextView
            android:id="@+id/photo_camera_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/spacing_10dp"
            android:text="拍照"
            android:textColor="@color/black"
            android:textSize="@dimen/text_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_1dp"
            android:background="@color/shop_line" />

        <TextView
            android:id="@+id/photo_album_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/spacing_10dp"
            android:text="从手机相册选择"
            android:textColor="@color/black"
            android:textSize="@dimen/text_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_5dp"
            android:background="@color/shop_line" />

        <TextView
            android:id="@+id/photo_cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/spacing_10dp"
            android:text="取消"
            android:textColor="@color/black"
            android:textSize="@dimen/text_16" />


    </com.flyco.roundview.RoundLinearLayout>

</RelativeLayout>