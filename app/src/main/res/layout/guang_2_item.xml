<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/select_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_5dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/select_item_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.vinnlook.www.utils.AutoSplitTextView
            android:id="@+id/select_item_goodsname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/classify_supi"
            android:layout_marginLeft="@dimen/spacing_5dp"
            android:layout_marginTop="@dimen/spacing_5dp"
            android:layout_marginRight="@dimen/spacing_5dp"
            android:ellipsize="end"
            android:lines="2"
            android:text="日本美瞳日抛"
            android:textColor="@color/black"
            android:textSize="@dimen/text_12" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_5dp"
            android:layout_marginTop="@dimen/spacing_3dp"
            android:layout_marginRight="@dimen/spacing_5dp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/select_item_hear"
                android:layout_width="@dimen/spacing_20dp"
                android:layout_height="@dimen/spacing_20dp"
                app:riv_corner_radius="999dp" />

            <TextView
                android:id="@+id/select_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/spacing_5dp"
                android:layout_toRightOf="@+id/select_item_hear"
                android:text="VinnJiang"
                android:textColor="#898989"
                android:textSize="@dimen/text_12" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/select_item_zan_img"
                    android:layout_width="@dimen/spacing_15dp"
                    android:layout_height="@dimen/spacing_15dp"
                    android:background="@mipmap/article_zan_icon" />

                <TextView
                    android:id="@+id/select_item_zan_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11"
                    android:textColor="#898989"
                    android:textSize="@dimen/text_12" />


            </LinearLayout>


        </RelativeLayout>


    </LinearLayout>


</LinearLayout>