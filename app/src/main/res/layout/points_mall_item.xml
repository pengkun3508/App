<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_5dp"
        android:background="@drawable/points_mall_item_bg"
        android:orientation="vertical"
        android:padding="@dimen/spacing_10dp">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/points_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/points_text_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_30" />

                <TextView
                    android:id="@+id/points_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_13" />
            </LinearLayout>


            <TextView
                android:id="@+id/points_text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/points_layout"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/spacing_3dp"
                android:text="1000积分"
                android:textColor="@color/white"
                android:textSize="@dimen/text_13" />


        </RelativeLayout>

        <TextView
            android:id="@+id/points_text_btn_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/points_mall_text_bg"
            android:gravity="center"
            android:padding="@dimen/spacing_3dp"
            android:text="立即兑换"
            android:textColor="@color/black"
            android:textSize="@dimen/text_14" />


    </LinearLayout>

</LinearLayout>