<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/spacing_5dp"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_1dp"
        android:background="@color/line"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_10dp">

        <ImageView
            android:id="@+id/group_item_item_image"
            android:layout_width="@dimen/spacing_75dp"
            android:layout_height="@dimen/spacing_75dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/spacing_10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/group_item_item_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="2"
                    android:text="日本美瞳日抛"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_14" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_10dp">

                <TextView
                    android:id="@+id/group_item_item_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分类：100度、refrear、30片"
                    android:textColor="@color/shop_text"
                    android:textSize="@dimen/text_12" />

                <TextView
                    android:id="@+id/group_item_item_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="x1"
                    android:textColor="@color/shop_text"
                    android:textSize="@dimen/text_12" />

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>