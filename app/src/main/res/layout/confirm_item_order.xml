<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.flyco.roundview.RoundRelativeLayout
        android:id="@+id/rl_product_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_10dp"
        android:layout_marginTop="@dimen/spacing_10dp"
        android:layout_marginRight="@dimen/spacing_10dp"
        app:rv_backgroundColor="#F6F6F6"
        app:rv_cornerRadius="@dimen/spacing_10dp">

        <com.flyco.roundview.RoundLinearLayout
            android:id="@+id/ll_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rv_cornerRadius="2dp"
            android:padding="@dimen/spacing_3dp"
            app:rv_strokePressColor="@color/line"
            app:rv_strokeWidth="1dp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/confirm_order_img"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="@dimen/spacing_5dp"
                app:riv_corner_radius="@dimen/spacing_10dp" />
        </com.flyco.roundview.RoundLinearLayout>

        <RelativeLayout
            android:id="@+id/confirm_order_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toEndOf="@+id/ll_img"
            android:layout_marginTop="@dimen/spacing_5dp">

            <TextView
                android:id="@+id/classify_supi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/classify_list_item"
                android:paddingLeft="@dimen/spacing_7dp"
                android:paddingRight="@dimen/spacing_7dp"
                android:text="自营"
                android:textColor="@color/white"
                android:textSize="@dimen/text_12"/>
            <TextView
                android:id="@+id/confirm_order_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/spacing_5dp"
                android:ellipsize="end"
                android:lines="2"
                android:text="日本美瞳Topards日抛型10枚彩色 隐形眼镜"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_12" />

        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/name_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/confirm_order_name_layout"
            android:layout_marginTop="@dimen/spacing_5dp"
            android:layout_marginRight="@dimen/spacing_5dp"
            android:layout_toEndOf="@+id/ll_img">


            <TextView
                android:id="@+id/confirm_order_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/spacing_17dp"
                android:text="规格"
                android:textColor="@color/shop_text"
                android:textSize="@dimen/text_12" />

            <TextView
                android:id="@+id/confirm_order_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="X1"
                android:textColor="@color/shop_text"
                android:textSize="@dimen/text_12" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_id"
            android:layout_alignLeft="@+id/confirm_order_name_layout"
            android:layout_alignBottom="@+id/ll_img"
            android:layout_marginTop="@dimen/spacing_5dp"
            android:layout_marginBottom="@dimen/spacing_5dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/confirm_order_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥88.00"
                android:textColor="@color/them"
                android:textSize="@dimen/text_13" />

            <TextView
                android:id="@+id/confirm_order_price_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥88.00"
                android:textColor="@color/iron"
                android:textSize="@dimen/text_10"
                android:layout_marginLeft="@dimen/spacing_2dp"/>


            <TextView
                android:id="@+id/activity_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_6dp"
                android:background="@drawable/home_xianshi_qianggo_bg_1"
                android:paddingLeft="@dimen/spacing_5dp"
                android:paddingTop="@dimen/spacing_1dp"
                android:paddingRight="@dimen/spacing_5dp"
                android:paddingBottom="@dimen/spacing_1dp"
                android:text="限时折扣"
                android:textColor="@color/black"
                android:textSize="@dimen/text_10" />
        </LinearLayout>


    </com.flyco.roundview.RoundRelativeLayout>


</LinearLayout>