<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/spacing_10dp"
    android:layout_marginTop="@dimen/spacing_5dp"
    android:layout_marginRight="@dimen/spacing_10dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/layout_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/notice_time_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:textColor="#333333"
            android:textSize="@dimen/text_16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/notice_time_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020-3"
            android:textColor="#333333"
            android:textSize="@dimen/text_8" />


    </LinearLayout>

    <com.flyco.roundview.RoundLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/spacing_10dp"
        android:layout_toRightOf="@+id/layout_1"
        android:gravity="center"
        android:paddingLeft="@dimen/spacing_5dp"
        android:paddingTop="@dimen/spacing_7dp"
        android:paddingRight="@dimen/spacing_5dp"
        android:paddingBottom="@dimen/spacing_7dp"
        app:rv_backgroundColor="@color/white"
        app:rv_cornerRadius="@dimen/spacing_6dp">

        <TextView
            android:id="@+id/notice_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="谢谢支持，敬请谅解，海淘订单不支持无理由退货！"
            android:textColor="#333333"
            android:textSize="@dimen/text_14" />


    </com.flyco.roundview.RoundLinearLayout>


</RelativeLayout>