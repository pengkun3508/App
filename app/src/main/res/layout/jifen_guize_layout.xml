<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_80">

    <com.flyco.roundview.RoundRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_350dp"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_light"
        android:orientation="vertical"
        app:rv_backgroundColor="@color/white"
        app:rv_cornerRadius_TL="@dimen/spacing_10dp"
        app:rv_cornerRadius_TR="@dimen/spacing_10dp">

        <TextView
            android:id="@+id/jifen_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/spacing_20dp"
            android:layout_marginBottom="@dimen/spacing_20dp"
            android:text="积分规则"
            android:textColor="@color/black"
            android:textSize="@dimen/text_16" />

        <View
            android:id="@+id/jifen_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_05dp"
            android:layout_below="@+id/jifen_title"
            android:background="@color/line" />

        <WebView
            android:id="@+id/jifen_guize_web"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/jifen_line"
            android:overScrollMode="never"
            android:fadingEdge="none"
            android:layout_marginBottom="@dimen/spacing_20dp"/>


        <LinearLayout
            android:id="@+id/guize_que_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="vertical">

            <View
                android:id="@+id/jifen_line2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_05dp"
                android:background="@color/line" />

            <TextView
                android:id="@+id/queding_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="@dimen/spacing_10dp"
                android:paddingBottom="@dimen/spacing_10dp"
                android:text="确定"
                android:textColor="@color/black"
                android:textSize="@dimen/text_16" />

        </LinearLayout>


    </com.flyco.roundview.RoundRelativeLayout>

</RelativeLayout>