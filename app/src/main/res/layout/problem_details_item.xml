<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/spacing_5dp">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/wen_img_head"
        android:layout_width="@dimen/spacing_35dp"
        android:layout_height="@dimen/spacing_35dp"
        android:src="@mipmap/ic_picture_loadfailed"
        app:riv_corner_radius="999dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_10dp"
        android:layout_toRightOf="@+id/wen_img_head"
        android:orientation="vertical">

        <TextView
            android:id="@+id/wen_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_10dp"
            android:text="某某某"
            android:textColor="#221815"
            android:textSize="@dimen/text_12" />

        <TextView
            android:id="@+id/wen_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_15dp"
            android:text="好看，舒服，还不错"
            android:textColor="#333333"
            android:textSize="@dimen/text_12" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_10dp">

            <TextView
                android:id="@+id/wen_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="2020-10-11 14:00"
                android:textColor="#BFC0C0"
                android:textSize="@dimen/text_10" />

            <LinearLayout
                android:id="@+id/wen_zan_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/wen_zan_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15"
                    android:textColor="#9FA0A0"
                    android:layout_marginRight="@dimen/spacing_5dp"
                    android:textSize="@dimen/text_12" />

                <ImageView
                    android:id="@+id/wen_zan_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/wen_zan_no" />

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>