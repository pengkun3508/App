<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_80">

    <com.flyco.roundview.RoundLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/spacing_30dp"
        android:orientation="vertical"
        android:padding="@dimen/spacing_20dp"
        app:rv_backgroundColor="@color/white"
        app:rv_cornerRadius="@dimen/spacing_10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="用户协议与隐私政策提示"
            android:textColor="@color/black"
            android:textSize="@dimen/text_16" />

        <TextView
            android:id="@+id/text_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_10dp"
            android:text=""
            android:textSize="@dimen/text_13" />

        <TextView
            android:id="@+id/text_content2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_10dp"
            android:text=""
            android:textSize="@dimen/text_13" />

        <TextView
            android:id="@+id/text_content3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_10dp"
            android:text=""
            android:textSize="@dimen/text_13" />

        <TextView
            android:id="@+id/text_content4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_10dp"
            android:text=""
            android:textSize="@dimen/text_13" />

        <TextView
            android:id="@+id/text_content5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_10dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/text_14" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/spacing_5dp"
                android:layout_weight="1"
                android:background="@drawable/a_jianbian_line_btn_bg"
                android:gravity="center"
                android:paddingTop="@dimen/spacing_3dp"
                android:paddingBottom="@dimen/spacing_3dp"
                android:text="不同意"
                android:textSize="@dimen/text_16" />

            <TextView
                android:id="@+id/agree_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_5dp"
                android:layout_weight="1"
                android:background="@drawable/a_jianbian_btn_bg1"
                android:gravity="center"
                android:paddingTop="@dimen/spacing_3dp"
                android:paddingBottom="@dimen/spacing_3dp"
                android:text="同意"
                android:textColor="@color/white"
                android:textSize="@dimen/text_16" />

        </LinearLayout>


    </com.flyco.roundview.RoundLinearLayout>


</RelativeLayout>