<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_5dp"
        android:layout_marginBottom="@dimen/spacing_5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/home_peidai_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/spacing_45dp"
                android:layout_height="@dimen/spacing_45dp"
                android:src="@mipmap/new_peidai_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="佩戴工具"
                android:textColor="@color/my_text1"
                android:textSize="@dimen/text_13" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_yimei_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/spacing_45dp"
                android:layout_height="@dimen/spacing_45dp"
                android:src="@mipmap/new_yimei_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="医美专区"
                android:textColor="@color/my_text1"
                android:textSize="@dimen/text_13" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_paihang_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/spacing_45dp"
                android:layout_height="@dimen/spacing_45dp"
                android:src="@mipmap/new_paihang_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="排行榜"
                android:textColor="@color/my_text1"
                android:textSize="@dimen/text_13" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_plus_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/spacing_45dp"
                android:layout_height="@dimen/spacing_45dp"
                android:src="@mipmap/new_plus_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plus会员"
                android:textColor="@color/my_text1"
                android:textSize="@dimen/text_13" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>