<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <com.vinnlook.www.widgat.actionbar.ActionBarSimple
        android:id="@+id/action_bar"
        style="@style/ActionBarStyle.Simple"
        android:background="@color/white"
        app:ab_bottom_line_color="@color/line"
        app:ab_bottom_line_height="1dp"
        app:abs_back_icon="@mipmap/back"
        app:abs_title="订单详情"
        app:abs_title_text_color="@color/text_black" />

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/action_bar"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/spacing_15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/id_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收货人："
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_14" />

                    <TextView
                        android:id="@+id/order_details_address_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/id_1"
                        android:text="张三"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_14" />

                    <TextView
                        android:id="@+id/order_details_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="13877778888"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_14" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单地址："
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_14" />

                    <TextView
                        android:id="@+id/order_details_address_addres"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="江苏省南京市建邺区扬子江大道"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_14" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_15dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="身份证号："
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_16" />

                    <TextView
                        android:id="@+id/order_details_address_idcar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="430************"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_16" />


                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_1dp"
                android:layout_marginLeft="@dimen/spacing_8dp"
                android:layout_marginRight="@dimen/spacing_8dp"
                android:background="@mipmap/order_img" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_size_10"
                android:background="@color/move_text7" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/spacing_15dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="订购人姓名："
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_14" />

                        <TextView
                            android:id="@+id/order_details_shiming_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="李先生"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_14" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_15dp"
                            android:text="身份证号码："
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_14" />

                        <TextView
                            android:id="@+id/order_details_id_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_15dp"
                            android:text="430***********"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_14" />


                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/shiming_name_img"
                    android:layout_width="@dimen/spacing_5dp"
                    android:layout_height="@dimen/spacing_15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/me_icon_6" />


            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_size_10"
                android:background="@color/move_text7" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:descendantFocusability="blocksDescendants">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/order_details_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_size_10"
                android:background="@color/move_text7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/spacing_15dp"
                    android:paddingTop="@dimen/spacing_20dp"
                    android:paddingRight="@dimen/spacing_15dp"
                    android:paddingBottom="@dimen/spacing_20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="配送方式"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_14" />

                    <TextView
                        android:id="@+id/order_details_express"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="快递"
                        android:textColor="@color/them"
                        android:textSize="@dimen/text_14" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/spacing_15dp"
                    android:layout_marginRight="@dimen/spacing_15dp"
                    android:background="@color/move_text7" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/spacing_15dp"
                    android:paddingTop="@dimen/spacing_20dp"
                    android:paddingRight="@dimen/spacing_15dp"
                    android:paddingBottom="@dimen/spacing_20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商品金额"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_14" />

                    <TextView
                        android:id="@+id/order_details_shop_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="88.00"
                        android:textColor="@color/them"
                        android:textSize="@dimen/text_14" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/spacing_15dp"
                    android:layout_marginRight="@dimen/spacing_15dp"
                    android:background="@color/move_text7" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/spacing_15dp"
                    android:paddingTop="@dimen/spacing_20dp"
                    android:paddingRight="@dimen/spacing_15dp"
                    android:paddingBottom="@dimen/spacing_20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="运费"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_14" />

                    <TextView
                        android:id="@+id/order_details_express_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="￥8.00"
                        android:textColor="@color/them"
                        android:textSize="@dimen/text_14" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/spacing_15dp"
                    android:layout_marginRight="@dimen/spacing_15dp"
                    android:background="@color/move_text7" />

                <RelativeLayout
                    android:id="@+id/coupon_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/spacing_15dp"
                    android:paddingTop="@dimen/spacing_20dp"
                    android:paddingRight="@dimen/spacing_15dp"
                    android:paddingBottom="@dimen/spacing_20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="优惠金额"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_14" />

                    <TextView
                        android:id="@+id/order_details_counpon_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/spacing_15dp"
                        android:text="￥-88.00"
                        android:textColor="@color/them"
                        android:textSize="@dimen/text_14" />

                    <ImageView
                        android:id="@+id/black_bg"
                        android:layout_width="@dimen/spacing_10dp"
                        android:layout_height="@dimen/spacing_5dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/down_icon" />
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/counpon_price_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/spacing_15dp"
                    android:paddingRight="@dimen/spacing_15dp"
                    android:paddingBottom="@dimen/spacing_10dp"
                    android:visibility="gone" />

                <View
                    android:id="@+id/counpon_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/spacing_15dp"
                    android:layout_marginRight="@dimen/spacing_15dp"
                    android:background="@color/move_text7" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/spacing_15dp"
                    android:paddingTop="@dimen/spacing_20dp"
                    android:paddingRight="@dimen/spacing_15dp"
                    android:paddingBottom="@dimen/spacing_20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="实付款"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_14" />

                    <TextView
                        android:id="@+id/order_details_toal_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="￥80.00"
                        android:textColor="@color/them"
                        android:textSize="@dimen/text_14" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_size_10"
                    android:background="@color/move_text7" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/spacing_15dp"
                    android:paddingTop="@dimen/spacing_20dp"
                    android:paddingRight="@dimen/spacing_15dp"
                    android:paddingBottom="@dimen/spacing_20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:text="留言："
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_14" />

                    <TextView
                        android:id="@+id/orderdetails_postscript"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:text="留言"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_14" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_size_10"
                    android:background="@color/move_text7" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/spacing_15dp"
                    android:layout_marginRight="@dimen/spacing_15dp"
                    android:background="@color/move_text7"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_1dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/spacing_15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/spacing_1dp"
                    android:paddingBottom="@dimen/spacing_1dp">

                    <TextView
                        android:id="@+id/order_details_oeder_sn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="订单编号：20200413114424667767"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_14" />

                    <TextView
                        android:id="@+id/order_no_copy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/spacing_5dp"
                        android:background="@drawable/me_bg2_them"
                        android:paddingLeft="@dimen/spacing_6dp"
                        android:paddingTop="@dimen/spacing_2dp"
                        android:paddingRight="@dimen/spacing_6dp"
                        android:paddingBottom="@dimen/spacing_2dp"
                        android:text="复制"
                        android:textColor="@color/them"
                        android:textSize="@dimen/text_12" />


                </LinearLayout>


                <TextView
                    android:id="@+id/order_details_oeder_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_5dp"
                    android:text="订单编号：20200413114424667767"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_14" />


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_20dp"
                    android:layout_marginBottom="@dimen/spacing_25dp">

                    <TextView
                        android:id="@+id/order_kefu_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/me_bg2_1"
                        android:paddingLeft="@dimen/spacing_10dp"
                        android:paddingTop="@dimen/spacing_5dp"
                        android:paddingRight="@dimen/spacing_10dp"
                        android:paddingBottom="@dimen/spacing_5dp"
                        android:text="联系客服"
                        android:textColor="@color/order_text1"
                        android:textSize="@dimen/text_14" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/spacing_15dp">

                        <TextView
                            android:id="@+id/order_tuihuan_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/spacing_8dp"
                            android:background="@drawable/me_bg2_1"
                            android:paddingLeft="@dimen/spacing_10dp"
                            android:paddingTop="@dimen/spacing_5dp"
                            android:paddingRight="@dimen/spacing_10dp"
                            android:paddingBottom="@dimen/spacing_5dp"
                            android:text="批量退款"
                            android:textColor="@color/order_text1"
                            android:textSize="@dimen/text_14"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/order_update_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/spacing_8dp"
                            android:layout_toRightOf="@+id/order_tuihuan_btn"
                            android:background="@drawable/me_bg2_1"
                            android:paddingLeft="@dimen/spacing_10dp"
                            android:paddingTop="@dimen/spacing_5dp"
                            android:paddingRight="@dimen/spacing_10dp"
                            android:paddingBottom="@dimen/spacing_5dp"
                            android:text="修改地址"
                            android:textColor="@color/order_text1"
                            android:textSize="@dimen/text_14" />


                        <TextView
                            android:id="@+id/order_quxiao_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/spacing_8dp"
                            android:layout_toRightOf="@+id/order_update_address"
                            android:background="@drawable/me_bg2_1"
                            android:paddingLeft="@dimen/spacing_10dp"
                            android:paddingTop="@dimen/spacing_5dp"
                            android:paddingRight="@dimen/spacing_10dp"
                            android:paddingBottom="@dimen/spacing_5dp"
                            android:text="取消订单"
                            android:textColor="@color/order_text1"
                            android:textSize="@dimen/text_14"
                            android:visibility="gone" />


                        <TextView
                            android:id="@+id/order_see_wuliu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/spacing_8dp"
                            android:layout_toRightOf="@+id/order_quxiao_btn"
                            android:background="@drawable/me_bg2_1"
                            android:paddingLeft="@dimen/spacing_10dp"
                            android:paddingTop="@dimen/spacing_5dp"
                            android:paddingRight="@dimen/spacing_10dp"
                            android:paddingBottom="@dimen/spacing_5dp"
                            android:text="查看物流"
                            android:textColor="@color/order_text1"
                            android:textSize="@dimen/text_14" />

                        <TextView
                            android:id="@+id/order_pay_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/spacing_8dp"
                            android:layout_toRightOf="@+id/order_see_wuliu"
                            android:background="@drawable/me_bg2_1_2"
                            android:paddingLeft="@dimen/spacing_10dp"
                            android:paddingTop="@dimen/spacing_5dp"
                            android:paddingRight="@dimen/spacing_10dp"
                            android:paddingBottom="@dimen/spacing_5dp"
                            android:text="立即支付"
                            android:textColor="@color/them"
                            android:textSize="@dimen/text_14"
                            android:visibility="gone"/>

                        <TextView
                            android:id="@+id/order_shouhuo_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/spacing_8dp"
                            android:layout_toRightOf="@+id/order_pay_btn"
                            android:background="@drawable/me_bg2_1"
                            android:paddingLeft="@dimen/spacing_10dp"
                            android:paddingTop="@dimen/spacing_5dp"
                            android:paddingRight="@dimen/spacing_10dp"
                            android:paddingBottom="@dimen/spacing_5dp"
                            android:text="确认收货"
                            android:textColor="@color/order_text1"
                            android:textSize="@dimen/text_14" />


                    </RelativeLayout>
                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>