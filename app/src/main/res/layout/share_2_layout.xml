<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_80">


    <ImageView
        android:id="@+id/core_img"
        android:layout_width="@dimen/spacing_200dp"
        android:layout_height="@dimen/spacing_200dp"
        android:layout_centerInParent="true" />


    <com.flyco.roundview.RoundLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="@dimen/spacing_20dp"
        app:rv_backgroundColor="@color/move_text1"
        app:rv_cornerRadius_TL="@dimen/spacing_10dp"
        app:rv_cornerRadius_TR="@dimen/spacing_10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_30dp"
            android:layout_marginBottom="@dimen/spacing_20dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingRight="@dimen/spacing_30dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_05dp"
                android:layout_weight="2.5"
                android:background="#b5b5b5" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:text="分享到"
                android:textColor="@color/black"
                android:textSize="@dimen/text_14" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_05dp"
                android:layout_weight="2.5"
                android:background="#b5b5b5" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_5dp"
            android:layout_marginBottom="@dimen/spacing_10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/wx_hy_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/spacing_35dp"
                    android:layout_height="@dimen/spacing_35dp"
                    android:background="@mipmap/share_wechat_icon" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="微信好友"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_14" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/wx_py_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/spacing_35dp"
                    android:layout_height="@dimen/spacing_35dp"
                    android:background="@mipmap/share_wxcircle_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="微信朋友圈"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_14" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/save_core_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/spacing_35dp"
                    android:layout_height="@dimen/spacing_35dp"
                    android:background="@mipmap/save_img_croe" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="保存到相册"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_14" />

            </LinearLayout>


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_1dp"
            android:layout_marginTop="@dimen/spacing_20dp"
            android:background="@color/line"
            android:visibility="gone" />


        <TextView
            android:id="@+id/share_cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="@dimen/spacing_3dp"
            android:paddingBottom="@dimen/spacing_3dp"
            android:text="取消"
            android:textColor="@color/black"
            android:textSize="@dimen/text_18"
            android:visibility="gone" />


    </com.flyco.roundview.RoundLinearLayout>


</RelativeLayout>