<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="44dp"
    android:layout_marginRight="44dp"
    android:background="@drawable/card_bg"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingTop="17dp"
    android:paddingRight="15dp"
    android:paddingBottom="14dp">

    <TextView
        android:id="@+id/tv_dialog_download_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/download_dialog_state_downloading"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_content" />

    <ProgressBar
        android:id="@+id/pb_dialog_download"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginTop="19dp"
        android:max="100"
        android:progress="0"
        android:progressDrawable="@drawable/update_progress_bg"
        tools:progress="50" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="已完成"
                android:textColor="@color/text_gray_light"
                android:textSize="@dimen/text_notes" />

            <TextView
                android:id="@+id/tv_dialog_download_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/text_gray_light"
                android:textSize="@dimen/text_notes" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="%"
                android:textColor="@color/text_gray_light"
                android:textSize="@dimen/text_notes" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="共"
                android:textColor="@color/text_gray_light"
                android:textSize="@dimen/text_notes" />

            <TextView
                android:id="@+id/tv_dialog_download_apk_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="40M"
                android:textColor="@color/text_gray_light"
                android:textSize="@dimen/text_notes" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>