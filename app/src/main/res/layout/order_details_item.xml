<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_product_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="15dp">

        <com.flyco.roundview.RoundLinearLayout
            android:id="@+id/ll_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rv_cornerRadius="2dp"
            app:rv_strokeColor="@color/line"
            app:rv_strokePressColor="@color/line"
            app:rv_strokeWidth="1dp">

            <ImageView
                android:id="@+id/order_item_image"
                android:layout_width="85dp"
                android:layout_height="85dp" />
        </com.flyco.roundview.RoundLinearLayout>

        <RelativeLayout
            android:id="@+id/name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_8dp"
            android:layout_toEndOf="@+id/ll_img"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/classify_supi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/classify_list_item"
                android:paddingLeft="@dimen/spacing_7dp"
                android:paddingRight="@dimen/spacing_7dp"
                android:text="自营"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/order_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="2"
                android:text="日本美瞳日抛"
                android:textColor="@color/black"
                android:textSize="@dimen/text_14" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/type_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_layout"
            android:layout_alignLeft="@+id/name_layout"
            android:layout_marginTop="@dimen/spacing_5dp"
            android:layout_toEndOf="@+id/ll_img">


            <TextView
                android:id="@+id/order_item_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:text="分类：100度、refrear、30片"
                android:textColor="@color/shop_text"
                android:textSize="@dimen/text_12" />

            <TextView
                android:id="@+id/order_item_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="X1"
                android:textColor="@color/shop_text"
                android:textSize="@dimen/text_12" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/type_layout"
            android:layout_alignLeft="@+id/name_layout"
            android:layout_alignParentBottom="@id/ll_img"
            android:layout_marginTop="@dimen/spacing_2dp">


            <TextView
                android:id="@+id/order_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="￥88.00"
                android:textColor="@color/them"
                android:textSize="@dimen/text_13" />

            <TextView
                android:id="@+id/confirm_item_price_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/spacing_5dp"
                android:layout_toRightOf="@+id/order_item_price"
                android:text="￥88.00"
                android:textColor="@color/iron"
                android:textSize="@dimen/text_10" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/order_status_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/me_bg2_1_2"
                    android:paddingLeft="@dimen/spacing_8dp"
                    android:paddingTop="@dimen/spacing_3dp"
                    android:paddingRight="@dimen/spacing_8dp"
                    android:paddingBottom="@dimen/spacing_3dp"
                    android:text="状态"
                    android:textColor="@color/them"
                    android:textSize="@dimen/text_12"
                    android:visibility="gone" />


                <TextView
                    android:id="@+id/order_tuikuan_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_10dp"
                    android:background="@drawable/me_bg2_1_2"
                    android:paddingLeft="@dimen/spacing_8dp"
                    android:paddingTop="@dimen/spacing_3dp"
                    android:paddingRight="@dimen/spacing_8dp"
                    android:paddingBottom="@dimen/spacing_3dp"
                    android:text="申请退款"
                    android:textColor="@color/them"
                    android:textSize="@dimen/text_12" />


                <TextView
                    android:id="@+id/order_add_shop_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_6dp"
                    android:background="@drawable/me_bg2_1_2"
                    android:paddingLeft="@dimen/spacing_8dp"
                    android:paddingTop="@dimen/spacing_3dp"
                    android:paddingRight="@dimen/spacing_8dp"
                    android:paddingBottom="@dimen/spacing_3dp"
                    android:text="再次加购"
                    android:textColor="@color/them"
                    android:textSize="@dimen/text_12" />

                <TextView
                    android:id="@+id/order_pingjia_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_6dp"
                    android:background="@drawable/me_bg2_1_2"
                    android:paddingLeft="@dimen/spacing_8dp"
                    android:paddingTop="@dimen/spacing_3dp"
                    android:paddingRight="@dimen/spacing_8dp"
                    android:paddingBottom="@dimen/spacing_3dp"
                    android:text="评价"
                    android:textColor="@color/them"
                    android:textSize="@dimen/text_12"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/order_yes_pingjia_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_6dp"
                    android:background="@drawable/me_bg2_1_2"
                    android:paddingLeft="@dimen/spacing_8dp"
                    android:paddingTop="@dimen/spacing_3dp"
                    android:paddingRight="@dimen/spacing_8dp"
                    android:paddingBottom="@dimen/spacing_3dp"
                    android:text="已评价"
                    android:textColor="@color/them"
                    android:textSize="@dimen/text_12"
                    android:visibility="gone" />


            </LinearLayout>

        </RelativeLayout>


    </RelativeLayout>


</LinearLayout>