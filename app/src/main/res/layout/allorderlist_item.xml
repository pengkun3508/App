<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/spacing_5dp"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_1dp"
        android:background="@color/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_10dp">

        <ImageView
            android:id="@+id/order_item_image"
            android:layout_width="@dimen/spacing_70dp"
            android:layout_height="@dimen/spacing_70dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_15dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/classify_supi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/classify_list_item"
                    android:paddingLeft="@dimen/spacing_7dp"
                    android:paddingRight="@dimen/spacing_7dp"
                    android:text="自营"
                    android:textColor="@color/white" />


                <TextView
                    android:id="@+id/order_item_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="2"
                    android:text="日本美瞳日抛"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_14" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_5dp">

                <TextView
                    android:id="@+id/order_item_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分类：100度、refrear、30片"
                    android:textColor="@color/shop_text"
                    android:textSize="@dimen/text_12" />

                <TextView
                    android:id="@+id/order_item_type_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="x1"
                    android:textColor="@color/shop_text"
                    android:textSize="@dimen/text_12" />

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/spacing_10dp">

            <TextView
                android:id="@+id/order_item1_static_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/me_bg2_1_2"
                android:paddingLeft="@dimen/spacing_8dp"
                android:paddingTop="@dimen/spacing_3dp"
                android:paddingRight="@dimen/spacing_8dp"
                android:paddingBottom="@dimen/spacing_3dp"
                android:text="asdasd"
                android:textColor="@color/them"
                android:textSize="@dimen/text_12" />

            <TextView
                android:id="@+id/order_item1_pingjia_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/me_bg2_1_2"
                android:paddingLeft="@dimen/spacing_8dp"
                android:paddingTop="@dimen/spacing_3dp"
                android:paddingRight="@dimen/spacing_8dp"
                android:paddingBottom="@dimen/spacing_3dp"
                android:layout_marginLeft="@dimen/spacing_6dp"
                android:text="评价"
                android:textColor="@color/them"
                android:textSize="@dimen/text_12" />
            <TextView
                android:id="@+id/order_item1_yes_pingjia_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/me_bg2_1_2"
                android:paddingLeft="@dimen/spacing_8dp"
                android:paddingTop="@dimen/spacing_3dp"
                android:paddingRight="@dimen/spacing_8dp"
                android:paddingBottom="@dimen/spacing_3dp"
                android:layout_marginLeft="@dimen/spacing_6dp"
                android:text="已评价"
                android:textColor="@color/them"
                android:textSize="@dimen/text_12"
                android:visibility="gone"/>

        </LinearLayout>


    </RelativeLayout>


</LinearLayout>