<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_3dp"
    android:background="@drawable/paoqi_item_bg"
    android:orientation="vertical"
    android:paddingLeft="0.5dp"
    android:paddingRight="0.5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/home_adapter_bg_line"
        android:padding="@dimen/spacing_1dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/paoqi_item_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:riv_corner_radius="@dimen/spacing_10dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_5dp"
        android:layout_marginRight="@dimen/spacing_5dp"
        android:layout_marginBottom="@dimen/spacing_5dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/classify_supi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/classify_list_item"
                android:paddingLeft="@dimen/spacing_7dp"
                android:paddingRight="@dimen/spacing_7dp"
                android:text="自营"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/paoqi_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/classify_supi"
                android:layout_marginTop="@dimen/spacing_18dp"
                android:ellipsize="end"
                android:lines="2"
                android:text="日本美瞳日抛"
                android:textColor="@color/black"
                android:textSize="@dimen/text_14" />

        </RelativeLayout>


        <TextView
            android:id="@+id/paoqi_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_5dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="Limoon"
            android:textColor="@color/me_address_text"
            android:textSize="@dimen/text_14"
            android:visibility="gone" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/memeber_text_bg"
            android:gravity="center"
            android:text="加入Plus可享9.5折"
            android:textColor="#ffd7be"
            android:textSize="@dimen/text_10" />


    </LinearLayout>
</LinearLayout>