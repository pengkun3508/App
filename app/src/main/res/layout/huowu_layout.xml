<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_80">

    <com.flyco.roundview.RoundLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="@dimen/spacing_15dp"
        app:rv_backgroundColor="@color/white"
        app:rv_cornerRadius_TL="@dimen/spacing_15dp"
        app:rv_cornerRadius_TR="@dimen/spacing_15dp">


        <RelativeLayout
            android:id="@+id/huowu_zhuangtai_xuanze_closs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="选择快递"
                android:textColor="@color/black"
                android:textSize="@dimen/text_15" />

            <ImageView
                android:layout_width="@dimen/spacing_15dp"
                android:layout_height="@dimen/spacing_15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/apply_closs" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_35dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="未收到货"
                android:textColor="#333333"
                android:textSize="@dimen/text_16" />

            <LinearLayout
                android:id="@+id/huowu_zhuangtai_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/spacing_5dp">

                <ImageView
                    android:id="@+id/huowu_zhuangtai_no_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/apply_quan_no" />

            </LinearLayout>

        </RelativeLayout>

        <View
            android:id="@+id/waill_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/spacing_10dp"
            android:layout_marginBottom="@dimen/spacing_10dp"
            android:background="@drawable/apply_xuxian_line" />

        <RelativeLayout
            android:id="@+id/yes_huowu_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="已收到货"
                android:textColor="#333333"
                android:textSize="@dimen/text_16" />

            <LinearLayout
                android:id="@+id/huowu_zhuangtai_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/spacing_5dp">

                <ImageView
                    android:id="@+id/huowu_zhuangtai_yes_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/apply_quan_no" />

            </LinearLayout>

        </RelativeLayout>


        <TextView
            android:id="@+id/huowu_zhuangtai_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_10dp"
            android:layout_marginTop="@dimen/spacing_80dp"
            android:layout_marginRight="@dimen/spacing_10dp"
            android:background="@drawable/classify_list_item"
            android:gravity="center"
            android:paddingTop="@dimen/spacing_8dp"
            android:paddingBottom="@dimen/spacing_8dp"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/text_18" />

    </com.flyco.roundview.RoundLinearLayout>

</RelativeLayout>