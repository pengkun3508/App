<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_80">


    <com.flyco.roundview.RoundRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/spacing_50dp"
        app:rv_backgroundColor="@color/white"
        app:rv_cornerRadius="@dimen/spacing_10dp">


        <View
            android:id="@+id/line0"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_1dp"
            android:layout_below="@+id/title"
            android:background="@color/line" />


        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line0"
            android:padding="@dimen/spacing_15dp"
            android:text="是否解除当前绑定的微信账号？"
            android:textColor="@color/black"
            android:textSize="@dimen/text_14" />

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_1dp"
            android:layout_below="@+id/content"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/return_update_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="@dimen/spacing_10dp"
                android:paddingBottom="@dimen/spacing_10dp"
                android:text="取消"
                android:textColor="#3478F6"
                android:textSize="@dimen/text_14" />

            <View
                android:layout_width="@dimen/spacing_1dp"
                android:layout_height="match_parent"
                android:background="@color/line" />

            <TextView
                android:id="@+id/sure_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="@dimen/spacing_10dp"
                android:paddingBottom="@dimen/spacing_10dp"
                android:text="确定"
                android:textColor="#3478F6"
                android:textSize="@dimen/text_14" />


        </LinearLayout>


    </com.flyco.roundview.RoundRelativeLayout>


</RelativeLayout>