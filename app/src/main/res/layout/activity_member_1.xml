                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:padding="@dimen/spacing_3dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="会员权益说明"
                                    android:textColor="@color/them_3"
                                    android:textSize="@dimen/text_10"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:layout_width="@dimen/spacing_13dp"
                                    android:layout_height="@dimen/spacing_13dp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/spacing_5dp"
                                    android:src="@mipmap/memeber_icon_1" />

                            </LinearLayout>


                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_20dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/memeber_zhe_layou_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/spacing_40dp"
                                    android:layout_height="@dimen/spacing_40dp"
                                    android:src="@mipmap/memeber_zhe_1" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/spacing_6dp"
                                    android:text="全场95折"
                                    android:textColor="@color/member_text"
                                    android:textSize="@dimen/text_13" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/memeber_fen_layou_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

