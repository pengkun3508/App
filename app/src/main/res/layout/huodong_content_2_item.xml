<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/spacing_10dp">

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/huodong_content_img"
            android:layout_width="@dimen/spacing_100dp"
            android:layout_height="@dimen/spacing_100dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            app:riv_corner_radius="99dp" />

        <LinearLayout
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/huo_price_text_bg_2"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/huo_goods_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="60"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_12" />

                <TextView
                    android:id="@+id/huo_goods_str"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_1dp"
                    android:text="片"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_6" />

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>


    <TextView
        android:id="@+id/huodong_content_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/spacing_5dp"
        android:ellipsize="end"
        android:lines="1"
        android:text="MerMer Light"
        android:textColor="@color/black"
        android:textSize="@dimen/text_12" />

    <com.flyco.roundview.RoundRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_10dp">

        <LinearLayout
            android:id="@+id/layout_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_5dp"
            android:background="@drawable/huo_price_text_bg"
            android:paddingLeft="@dimen/spacing_5dp"
            android:paddingTop="@dimen/spacing_2dp"
            android:paddingRight="@dimen/spacing_5dp"
            android:paddingBottom="@dimen/spacing_2dp">

            <TextView
                android:id="@+id/huo_goods_fu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textColor="@color/black"
                android:textSize="@dimen/text_8" />

            <TextView
                android:id="@+id/huo_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_1dp"
                android:layout_toRightOf="@+id/huo_price_text"
                android:text="150.00"
                android:textColor="@color/black"
                android:textSize="@dimen/text_12"/>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-10dp"
            android:layout_toRightOf="@+id/layout_layout"
            android:src="@mipmap/huo_price_icon" />


    </com.flyco.roundview.RoundRelativeLayout>


</LinearLayout>