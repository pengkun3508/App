<resources>

    <!--Activity默认主题-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowAnimationStyle">@style/right_in_left_out</item>
    </style>

    <!-- 上圆角样式 -->
    <style name="top_layout" parent="base_layout">

    </style>


    <!-- 共用层样式 -->
    <style name="base_layout">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:paddingLeft">13dp</item>
        <item name="android:paddingRight">13dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="main_menu_animstyle">
        <item name="android:windowEnterAnimation">@anim/photo_dialog_in_anim</item>
        <item name="android:windowExitAnimation">@anim/photo_dialog_out_anim</item>
    </style>

    <!--    /**-->
    <!--    微信登录-->
    <!--    */-->

    <style name="wx_login_style" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_close_exit</item><!--退出动画-->
        <item name="android:activityOpenExitAnimation">@anim/activity_close_exit</item>
        <!--<item name="android:background">@color/color_transparent_9000</item>-->
    </style>


    <!--    <style name="AppTheme.NoActionBar">-->
    <!--        <item name="windowActionBar">false</item>-->
    <!--        <item name="windowNoTitle">true</item>-->
    <!--    </style>-->

    <!--Activity进出动画-->
    <style name="right_in_left_out" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_right_out</item>
    </style>

    <!--Activity进出动画-->
    <style name="zoom_big_in_big_out" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_zoom_big_in</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_zoom_big_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_zoom_small_in</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_zoom_small_out</item>
    </style>

    <!--Activity进出动画-->
    <style name="zoom_small_in_small_out" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_zoom_small_in</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_zoom_small_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_zoom_big_in</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_zoom_big_out</item>
    </style>

    <!--标题栏文字样式-->
    <style name="ActionBarTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_black</item>
    </style>
    <!--标题栏左右文字菜单样式-->
    <style name="ActionBarTextStyle.Menu">
        <item name="android:textSize">@dimen/text_content</item>
    </style>

    <!--标题栏标题文字样式-->
    <style name="ActionBarTextStyle.Title">
        <item name="android:textSize">@dimen/text_title</item>
    </style>
    <!--通用标题栏-->
    <style name="ActionBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/action_bar_bg</item>
        <item name="ab_status_bar_mode">light</item>
        <item name="ab_title_bar_height">@dimen/action_bar_height</item>
        <item name="ab_bottom_line_height">@dimen/action_bar_bottom_line_height</item>
        <item name="ab_bottom_line_color">@color/action_bar_bottom_line</item>
    </style>
    <!--通用标题栏-返回按钮-->
    <style name="ActionBarStyle.Simple">
        <item name="abs_back_icon">@mipmap/back</item>
        <item name="abs_title_text_color">@color/text_black</item>
        <item name="textSize">18sp</item>
    </style>

    <!--标题栏图标样式-->
    <style name="ActionBarIconStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">13dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="piv_basics">height</item>
        <item name="piv_percent">1</item>
    </style>

    <style name="ActionBarAStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="piv_basics">height</item>
        <item name="piv_percent">1</item>
    </style>


    <style name="ShadowLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">58dp</item>
        <item name="sl_shadow_angle">90</item>
        <item name="sl_shadow_color">@color/button_shadow</item>
        <item name="sl_shadow_distance">1dp</item>
        <item name="sl_shadow_radius">7dp</item>
        <item name="sl_shadowed">true</item>
    </style>


    <!-- 水平Loading条默认样式-->
    <style name="LoadingBar" parent="Widget.MaterialProgressBar.ProgressBar.Horizontal.NoPadding">
        <item name="android:minHeight">1dp</item>
        <item name="android:maxHeight">5dp</item>
    </style>

    <!--StartActivity主题-->
    <style name="AppTheme.Start">
        <item name="android:windowBackground">@mipmap/start_bg</item>
    </style>

    <!--底部导航栏上部阴影-->
    <style name="BottomBarShadowStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@drawable/bottom_bar_shadow</item>
    </style>

    <!--分割线-->
    <style name="ViewLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/line</item>
    </style>

    <!--分割线最细-->
    <style name="ViewLineStyle.Thin">
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="MyDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--PictureSelector主题配置-->
    <style name="PictureSelectorNumStyle" parent="picture.default.style">
        <item name="android:windowAnimationStyle">@style/right_in_left_out</item>
        <!-- Customize your theme here. -->
        <!--标题栏高度-->
        <item name="picture.title_bar.height">@dimen/action_bar_height</item>
        <!--标题栏背景色-->
        <item name="colorPrimary">@color/black</item>
        <!--状态栏背景色-->
        <item name="colorPrimaryDark">@color/black</item>
        <!--是否改变图片列表界面状态栏字体颜色为黑色-->
        <item name="picture.statusFontColor">false</item>
        <!--返回键图标-->
        <item name="picture.leftBack.icon">@mipmap/back</item>
        <!--返回键图标边距，高度宽度为标题栏高度-->
        <item name="picture.leftBack.icon.padding">15dp</item>
        <!--标题下拉箭头-->
        <item name="picture.arrow_down.icon">@drawable/arrow_down</item>
        <!--标题上拉箭头-->
        <item name="picture.arrow_up.icon">@drawable/arrow_up</item>
        <!--标题文字颜色-->
        <item name="picture.title.textColor">@color/text_white</item>
        <!--标题栏右边文字-->
        <item name="picture.right.textColor">@color/text_white</item>
        <!--图片列表勾选样式-->
        <item name="picture.checked.style">@drawable/checkbox_num_selector</item>
        <!--开启图片列表勾选数字模式,开启的话勾选样式要换-->
        <item name="picture.style.checkNumMode">true</item>
        <!--选择图片样式0/9-->
        <item name="picture.style.numComplete">true</item>
        <!--图片列表背景色-->
        <item name="picture.bg">@color/black_pure</item>
        <!--图片列表底部背景色-->
        <item name="picture.bottom.bg">@color/black</item>
        <!--图片列表预览文字颜色-->
        <item name="picture.preview.textColor">@color/text_accent</item>
        <!--图片列表已完成文字颜色-->
        <item name="picture.complete.textColor">@color/text_accent</item>
        <!--图片已选数量圆点背景色-->
        <item name="picture.num.style">@drawable/num_oval_blue</item>
        <!--预览界面标题文字颜色-->
        <item name="picture.ac_preview.title.textColor">@color/text_white</item>
        <!--预览界面已完成文字颜色-->
        <item name="picture.ac_preview.complete.textColor">@color/text_accent</item>
        <!--预览界面背景色-->
        <item name="picture.ac_preview.bg">@color/black_pure</item>
        <!--预览界面标题栏背景色-->
        <item name="picture.ac_preview.title.bg">@color/black</item>
        <!--预览界面底部背景色-->
        <item name="picture.ac_preview.bottom.bg">@color/black</item>
        <!--预览界面返回箭头-->
        <item name="picture.preview.leftBack.icon">@mipmap/back</item>
        <!--裁剪页面标题背景色-->
        <item name="picture.crop.toolbar.bg">@color/black</item>
        <!--裁剪页面状态栏颜色-->
        <item name="picture.crop.status.color">@color/black</item>
        <!--裁剪页面标题文字颜色-->
        <item name="picture.crop.title.color">@color/text_white</item>
        <!--相册文件夹列表选中图标-->
        <item name="picture.folder_checked_dot">@drawable/orange_oval</item>
    </style>


    <!--View线1dp 距左距右15dp-->
    <style name="ViewOneMarginStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:background">@color/line</item>
    </style>

    <style name="Theme.AppStartLoadTranslucent" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <declare-styleable name="VerticalScrollLayout">
        <attr name="vsl_animDuration" format="integer" />
        <attr name="vsl_sleepTime" format="integer" />
        <attr name="vsl_isCusDuration" format="boolean" />
    </declare-styleable>

    <!--弹窗弹出动画-->
    <style name="Popupwindow">
        <item name="android:windowEnterAnimation">@anim/window_out</item>
        <item name="android:windowExitAnimation">@anim/window_back</item>
    </style>


</resources>
