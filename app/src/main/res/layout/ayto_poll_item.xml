<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/spacing_10dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/wuliu_layout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/wuliu_img"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            app:riv_corner_radius="@dimen/spacing_10dp" />

        <TextView
            android:id="@+id/wuliu_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/spacing_5dp"
            android:ellipsize="end"
            android:lines="2"
            android:text="物流详情" />

    </LinearLayout>

    <TextView
        android:id="@+id/wuliu_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>




</LinearLayout>