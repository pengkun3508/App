<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <!--        <com.vinnlook.www.widgat.actionbar.ActionBarSimple-->
    <!--            android:id="@+id/action_bar"-->
    <!--            style="@style/ActionBarStyle.Simple"-->
    <!--            android:background="@color/white"-->
    <!--            app:ab_bottom_line_height="0dp"-->
    <!--            app:abs_back_icon="@mipmap/back"-->
    <!--            app:abs_title="商品列表" />-->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/spacing_40dp"
        android:layout_marginBottom="@dimen/spacing_10dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="@dimen/spacing_25dp"
            android:layout_height="@dimen/spacing_25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/spacing_15dp"
            android:padding="@dimen/spacing_3dp"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="商品列表"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_18" />


        <LinearLayout
            android:id="@+id/search_linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/spacing_40dp"
            android:background="@drawable/searchview_line"
            android:gravity="center"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/classify_serachview_edt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_10dp"
                android:layout_weight="1"
                android:background="@null"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="搜索"
                android:paddingTop="@dimen/spacing_6dp"
                android:paddingBottom="@dimen/spacing_6dp"
                android:textColorHint="#B5B5B6"
                android:textCursorDrawable="@drawable/my_cursor"
                android:imeOptions="actionSearch"
                android:maxLines="1"
                android:textSize="@dimen/text_12" />


            <ImageView
                android:id="@+id/searchview_icon"
                android:layout_width="@dimen/spacing_25dp"
                android:layout_height="@dimen/spacing_25dp"
                android:padding="@dimen/spacing_5dp"
                android:layout_marginLeft="@dimen/spacing_10dp"
                android:layout_marginRight="@dimen/spacing_5dp"
                android:src="@mipmap/home_searchview" />

        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_1dp"
        android:background="@color/shop_line" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FBFAFA"
        android:orientation="horizontal"
        android:paddingTop="@dimen/spacing_10dp"
        android:paddingBottom="@dimen/spacing_10dp">

        <LinearLayout
            android:id="@+id/classify_zonghe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/zonghe_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="综合"
                android:textColor="@color/them"
                android:textSize="@dimen/text_14" />

            <ImageView
                android:layout_width="@dimen/spacing_10dp"
                android:layout_height="@dimen/spacing_15dp"
                android:src="@mipmap/classify_icon_1"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/classify_xiaoliang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/xiaoliang_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="销量"
                android:textColor="@color/classify_text1"
                android:textSize="@dimen/text_14" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/classify_xinpin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/xinpin_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新品"
                android:textColor="@color/classify_text1"
                android:textSize="@dimen/text_14" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/classify_jiage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/jiage_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格"
                android:textColor="@color/classify_text1"
                android:textSize="@dimen/text_14" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/jiage_img1"
                    android:layout_width="@dimen/spacing_8dp"
                    android:layout_height="@dimen/spacing_8dp"
                    android:src="@mipmap/classify_icon_2" />

                <ImageView
                    android:id="@+id/jiage_img2"
                    android:layout_width="@dimen/spacing_8dp"
                    android:layout_height="@dimen/spacing_8dp"
                    android:src="@mipmap/classify_icon_3" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/classify_shaixuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/shaixuan_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="筛选"
                android:textColor="@color/classify_text1"
                android:textSize="@dimen/text_14" />

            <ImageView
                android:layout_width="@dimen/spacing_10dp"
                android:layout_height="@dimen/spacing_15dp"
                android:src="@mipmap/classify_icon_4" />
        </LinearLayout>
    </LinearLayout>


    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/smart_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FBFAFA" />

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</LinearLayout>