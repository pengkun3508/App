<?xml version="1.0" encoding="utf-8"?>
<com.flyco.roundview.RoundRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/spacing_10dp"
    android:layout_marginTop="@dimen/spacing_10dp"
    android:layout_marginRight="@dimen/spacing_10dp"
    android:layout_marginBottom="@dimen/spacing_5dp"
    android:orientation="vertical"
    android:padding="@dimen/spacing_5dp"
    app:rv_backgroundColor="@color/white"
    app:rv_cornerRadius="@dimen/spacing_10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/spacing_5dp">


            <ImageView
                android:id="@+id/wen_img"
                android:layout_width="@dimen/spacing_18dp"
                android:layout_height="@dimen/spacing_18dp"
                android:background="@mipmap/wenyiwen_img" />

            <TextView
                android:id="@+id/wen_wen_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_5dp"
                android:text="各位姐妹，这一款适度怎样啊？"
                android:textColor="#333333"
                android:textSize="@dimen/text_14" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/da_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/spacing_5dp">


            <ImageView
                android:layout_width="@dimen/spacing_18dp"
                android:layout_height="@dimen/spacing_18dp"
                android:background="@mipmap/wen_img_da" />

            <TextView
                android:id="@+id/wen_da_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_5dp"
                android:text="各位姐妹，这一款适度怎样啊？"
                android:textColor="#221815"
                android:textSize="@dimen/text_12" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/wen_count_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_5dp">

            <TextView
                android:id="@+id/wen_count_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_35dp"
                android:text="全部5个回答>"
                android:textColor="#FF0000"
                android:textSize="@dimen/text_12" />


        </LinearLayout>


    </LinearLayout>


</com.flyco.roundview.RoundRelativeLayout>