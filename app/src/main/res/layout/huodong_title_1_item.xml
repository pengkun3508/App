<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/huodong_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/spacing_15dp"
    android:paddingTop="@dimen/spacing_5dp"
    android:paddingRight="@dimen/spacing_15dp"
    android:paddingBottom="@dimen/spacing_5dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title_tiem_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/black_60"
            android:textSize="@dimen/text_20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="阶"
            android:textColor="@color/black_80"
            android:layout_marginLeft="@dimen/spacing_3dp"
            android:textSize="@dimen/text_12" />

    </LinearLayout>

    <TextView
        android:id="@+id/title_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="买一赠一"
        android:textColor="@color/black"
        android:textSize="@dimen/text_14" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-期間限定-"
        android:textColor="#595757"
        android:textSize="@dimen/text_10" />


</LinearLayout>