<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="VerCodeView">
        <attr name="vcv_duration" format="integer" />
        <attr name="vcv_waiting_text" format="string|reference" />
        <attr name="vcv_waiting_text_color" format="color|reference" />
        <attr name="vcv_waiting_bg" format="reference" />
        <attr name="vcv_finish_text" format="string|reference" />
        <attr name="vcv_finish_text_color" format="color|reference" />
        <attr name="vcv_finish_bg" format="reference" />
        <attr name="vcv_state" format="enum">
            <enum name="normal" value="0" />
            <enum name="waiting" value="1" />
            <enum name="finish" value="2" />
        </attr>
    </declare-styleable>


    <declare-styleable name="MarqueeText">
        <attr name="clickEnable" format="boolean" />
        <attr name="direction" format="boolean" />
        <attr name="speed" format="integer" />
        <attr name="text"  />
        <attr name="textColor"/>
        <attr name="textSize"  />
        <attr name="times" format="integer" />
    </declare-styleable>
    <attr name="textSize" format="dimension" />
    <attr name="textColor" format="string" />
    <attr name="text" format="string"/>
    <declare-styleable name="MTextView">
        <attr name="paddingLeft" format="dimension" />
        <attr name="paddingTop" format="dimension" />
        <attr name="paddingRight" format="dimension" />
        <attr name="paddingBottom" format="dimension" />
        <attr name="textSize" />
        <attr name="textColor"  />
        <attr name="text"/>
        <attr name="lineSpacings" format="integer" />
        <attr name="maxLine" format="integer"/>
        <attr name="ellipsis" format="boolean" />
    </declare-styleable>


    <declare-styleable name="ActionBarSimple">
        <attr name="abs_title" format="string|reference" />
        <attr name="abs_title_text_color" format="color|reference" />
        <attr name="abs_back_icon" format="reference" />
        <attr name="abs_back_text" format="string|reference" />
        <attr name="abs_right_icon" format="reference" />
        <attr name="abs_right_text" format="string|reference" />
        <attr name="abs_left_icon" format="reference" />
    </declare-styleable>

    <declare-styleable name="HeadView">
        <attr name="head_icon" format="reference" />
        <attr name="head_icon_frame" format="reference" />
    </declare-styleable>

    <!--验证码的属性-->
    <declare-styleable name="VerCodeEditText">
        <attr name="figures" format="integer" />
        <attr name="verCodeMargin" format="dimension" />
        <attr name="bottomLineSelectedColor" format="reference" />
        <attr name="bottomLineNormalColor" format="reference" />
        <attr name="bottomLineInputtedColor" format="reference" />
        <attr name="bottomLineSelectedHeight" format="dimension" />
        <attr name="bottomLineNormalHeight" format="dimension" />
        <attr name="bottomLineInputtedHeight" format="dimension" />
        <attr name="selectedBackgroundColor" format="reference" />
        <attr name="cursorDuration" format="integer" />
        <attr name="cursorWidth" format="dimension" />
        <attr name="cursorColor" format="color|reference" />
    </declare-styleable>

    <!--验证码的属性-->
    <declare-styleable name="IndexBar">
        <attr name="ib_text_size" format="dimension" />
        <attr name="ib_text_color_default" format="color|reference" />
        <attr name="ib_text_color_select" format="color|reference" />
        <attr name="ib_text_padding_v" format="dimension" />
        <attr name="ib_text_padding_h" format="dimension" />
        <attr name="ib_bg_padding_v" format="dimension" />
        <attr name="ib_bg_padding_h" format="dimension" />
    </declare-styleable>



    <declare-styleable name="ClassCoverRoundedImageView">
        <attr name="ccriv_basic" format="enum">
            <enum name="width" value="0" />
            <enum name="height" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ClassCoverImageView">
        <attr name="cciv_basic" format="enum">
            <enum name="width" value="0" />
            <enum name="height" value="1" />
        </attr>
    </declare-styleable>


    <!--轮播图的滑动指示器-->
    <declare-styleable name="ViewPagerIndicator">
        <attr name="vpi_selected_color" format="color|reference" />
        <attr name="vpi_default_color" format="color|reference" />
        <attr name="vpi_radius" format="dimension|reference" />
        <attr name="vpi_length" format="dimension|reference" />
        <attr name="vpi_distance" format="dimension|reference" />
        <attr name="vpi_num" format="integer" />
        <attr name="vpi_indicatorType">
            <enum name="LINE" value="0" />
            <enum name="CIRCLE" value="1" />
            <enum name="CIRCLE_LINE" value="2" />
            <enum name="BEZIER" value="3" />
            <enum name="SPRING" value="4" />
        </attr>
        <attr name="vpi_distanceType">
            <enum name="BY_RADIUS" value="0" />
            <enum name="BY_DISTANCE" value="1" />
            <enum name="BY_LAYOUT" value="2" />
        </attr>
        <attr name="vpi_animation" format="boolean" />
    </declare-styleable>


    <!--设置字体大小控件-->
    <declare-styleable name="SetTextSizeView">
        <attr name="lineWidth" format="dimension|reference" />
        <attr name="lineColor" format="color|reference" />
        <attr name="totalCount" format="integer" />
        <attr name="circleColor" format="color|reference" />
        <attr name="circleRadius" format="dimension|reference" />
    </declare-styleable>




    <!--星星控件属性-->
    <declare-styleable name="StarBarView">
        <!--设置星星间的间隔-->
        <attr name="space_width" format="dimension" />
        <!--星星间宽度-->
        <attr name="star_width" format="dimension" />
        <!--星星间高度-->
        <attr name="star_height" format="dimension" />
        <!--最大数量-->
        <attr name="star_max" format="integer" />
        <!--选中数量-->
        <attr name="star_rating" format="float" />
        <!--未选中图片-->
        <attr name="star_hollow" format="reference" />
        <!--选中图片-->
        <attr name="star_solid" format="reference" />
        <!--是否可以滑动改变选中数量-->
        <attr name="star_isIndicator" format="boolean" />
        <!--排列方向-->
        <attr name="star_orientation" format="enum">
            <enum name="vertical" value="1" />
            <enum name="horizontal" value="0" />
        </attr>
    </declare-styleable>


    <declare-styleable name="LinearGradientTextView4">
        <attr name="lineNumber" format="integer"></attr>
        <attr name="showTime" format="integer"></attr>
        <attr name="textColors" format="color"></attr>
        <attr name="showStyle">
            <enum name="UNIDIRECTION" value="0"></enum>
            <enum name="TWOWAY" value="1"></enum>
        </attr>

    </declare-styleable>

    <declare-styleable name="MoreTextView">

        <attr name="minLine" format="integer"/>

        <attr name="moreTextColor" format="color"/>
        <attr name="moreSwitchTextColor" format="color"/>

        <attr name="moreTextSize" format="dimension"/>
        <attr name="moreSwitchTextSize" format="dimension"/>

        <attr name="moreSwitchDrawable" format="reference"/>



    </declare-styleable>


</resources>