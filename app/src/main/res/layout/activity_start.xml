<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_bg_star"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/start_up_bg_1" />


    <RelativeLayout
        android:id="@+id/vp_start_welcome_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_110dp"
            android:background="@mipmap/start_welcome_bg_1" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="@dimen/spacing_45dp"
            android:layout_height="@dimen/spacing_45dp"
            android:layout_below="@id/img1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-100dp"
            android:background="@mipmap/start_welcome_bg_2" />

        <ImageView
            android:id="@+id/imgd3"
            android:layout_width="@dimen/spacing_90dp"
            android:layout_height="@dimen/spacing_15dp"
            android:layout_below="@id/img2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/spacing_10dp"
            android:background="@mipmap/start_welcome_bg_3" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/spacing_80dp"
            android:layout_height="@dimen/spacing_80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/spacing_90dp"
            android:background="@mipmap/icon_jeal"
            android:visibility="gone" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@mipmap/start_icon_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@mipmap/start_bg_2"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_20dp"
                android:gravity="center"
                android:text="VINNLOOK"
                android:textColor="@color/white"
                android:textSize="@dimen/text_45" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_50dp"
                android:gravity="center"
                android:text="让 美 丽 从 双 眸 绽 放"
                android:textColor="@color/white"
                android:textSize="@dimen/text_15" />

        </LinearLayout>


    </RelativeLayout>


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_start_welcome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</LinearLayout>
