<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="0.5dp"
    android:paddingRight="0.5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/home_adapter_bg_line"
        android:padding="@dimen/spacing_1dp">


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/paoqi_item_img"
            android:layout_width="@dimen/spacing_100dp"
            android:layout_height="@dimen/spacing_100dp"
            app:riv_corner_radius="@dimen/spacing_10dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_5dp"
        android:layout_marginRight="@dimen/spacing_5dp"
        android:layout_marginBottom="@dimen/spacing_5dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/classify_supi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/classify_list_item"
                android:paddingLeft="@dimen/spacing_7dp"
                android:paddingRight="@dimen/spacing_7dp"
                android:text="自营"
                android:textColor="@color/white"
                android:textSize="@dimen/text_10"/>

            <com.vinnlook.www.utils.AutoSplitTextView
                android:id="@+id/paoqi_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/classify_supi"
                android:layout_marginTop="@dimen/spacing_16dp"
                android:ellipsize="end"
                android:lines="2"
                android:text="日本美瞳日抛"
                android:textColor="@color/black"
                android:textSize="@dimen/text_12" />

        </RelativeLayout>


        <TextView
            android:id="@+id/paoqi_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_5dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="Limoon"
            android:textColor="@color/me_address_text"
            android:textSize="@dimen/text_14"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/paoqi_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="￥140.00"
                android:textColor="@color/them"
                android:textSize="@dimen/text_12" />

            <LinearLayout
                android:id="@+id/home_paoqi_add_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="@dimen/spacing_5dp"
                android:paddingLeft="@dimen/spacing_10dp"
                android:paddingTop="@dimen/spacing_5dp"
                android:paddingRight="@dimen/spacing_5dp"
                android:paddingBottom="@dimen/spacing_5dp">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@mipmap/home_img_icon_suo" />


            </LinearLayout>


        </RelativeLayout>


    </LinearLayout>
</LinearLayout>