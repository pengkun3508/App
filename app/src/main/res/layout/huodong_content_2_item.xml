<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/spacing_10dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/huodong_content_img"
        android:layout_width="@dimen/spacing_100dp"
        android:layout_height="@dimen/spacing_100dp"
        android:layout_gravity="center"
        app:riv_corner_radius="99dp" />

    <TextView
        android:id="@+id/huodong_content_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/spacing_5dp"
        android:ellipsize="end"
        android:lines="1"
        android:text="MerMer Light"
        android:textColor="@color/black"
        android:textSize="@dimen/text_12" />

</LinearLayout>