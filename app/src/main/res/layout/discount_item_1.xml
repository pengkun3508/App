<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/more_layout_btn"
    android:layout_width="@dimen/spacing_60dp"
    android:layout_height="@dimen/spacing_200dp"
    android:layout_gravity="center"

    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_20dp"
        android:layout_marginBottom="@dimen/spacing_30dp">

        <ImageView
            android:id="@+id/discount_item_img"
            android:layout_width="@dimen/spacing_30dp"
            android:layout_height="@dimen/spacing_15dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/spacing_20dp"
            android:src="@mipmap/more_icon_img" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="查看更多"
            android:textColor="@color/black"
            android:textSize="@dimen/text_12" />
    </RelativeLayout>


</LinearLayout>