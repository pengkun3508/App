                                    android:textColor="@color/member_text"
                                    android:textSize="@dimen/text_13" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/memeber_tui_layou_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/spacing_40dp"
                                    android:layout_height="@dimen/spacing_40dp"
                                    android:src="@mipmap/memeber_tui_3" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/spacing_6dp"
                                    android:text="极速退款"
                                    android:textColor="@color/member_text"
                                    android:textSize="@dimen/text_13" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/memeber_ke_layou_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/spacing_40dp"
                                    android:layout_height="@dimen/spacing_40dp"
                                    android:src="@mipmap/memeber_ke_4" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/spacing_6dp"
                                    android:text="专属客服"
                                    android:textColor="@color/member_text"
                                    android:textSize="@dimen/text_13" />

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_20dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/memeber_gou_layou_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/spacing_40dp"
                                    android:layout_height="@dimen/spacing_40dp"
                                    android:src="@mipmap/memeber_gou_5" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/spacing_6dp"
                                    android:text="会员购物节"
                                    android:textColor="@color/member_text"
                                    android:textSize="@dimen/text_13" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/memeber_you_layou_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/spacing_40dp"
                                    android:layout_height="@dimen/spacing_40dp"
                                    android:src="@mipmap/memeber_you_6" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/spacing_6dp"
                                    android:text="一件包邮"
                                    android:textColor="@color/member_text"
                                    android:textSize="@dimen/text_13" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/memeber_quan_layou_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="@dimen/spacing_40dp"
                                    android:src="@mipmap/memeber_sheng_7" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/spacing_6dp"
                                    android:text="神秘礼券"
                                    android:textColor="@color/member_text"
                                    android:textSize="@dimen/text_13" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/memeber_fa_layou_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/spacing_40dp"
                                    android:layout_height="@dimen/spacing_40dp"
                                    android:src="@mipmap/memeber_fa_8" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/spacing_6dp"
                                    android:text="优先发货"
                                    android:textColor="@color/member_text"
                                    android:textSize="@dimen/text_13" />

                            </LinearLayout>


                        </LinearLayout>


                    </com.flyco.roundview.RoundLinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/spacing_5dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/memeber_remen_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/spacing_10dp"
                                android:text="热门推荐"
                                android:textColor="@color/them_3"
                                android:textSize="@dimen/text_16"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:id="@+id/memeber_see_quanbu_shop"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/spacing_10dp"
                                android:padding="@dimen/spacing_3dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="全部商品"
                                    android:textColor="@color/them_3"
                                    android:textSize="@dimen/text_10"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:layout_width="@dimen/spacing_10dp"
                                    android:layout_height="@dimen/spacing_10dp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/spacing_5dp"
                                    android:src="@mipmap/memeber_icon_img_111" />

                            </LinearLayout>


                        </RelativeLayout>


                        <com.flyco.roundview.RoundRelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/memeber_remen_text"
                            android:layout_marginTop="@dimen/spacing_5dp"
                            android:layout_marginBottom="@dimen/spacing_30dp"
                            android:descendantFocusability="blocksDescendants"
                            app:rv_backgroundColor="@color/white"
                            app:rv_cornerRadius="6dp">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/memeber_recycler_2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="5dp" />
                        </com.flyco.roundview.RoundRelativeLayout>


                    </LinearLayout>

                </LinearLayout>


                <!--                未购买会员-->
                <LinearLayout
                    android:id="@+id/memeber_not_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/memeber_bg_22"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="尊享"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_25"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_50"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="大权益"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_25"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="每次购买均能享受9.5折特权"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_18"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/memeber_pay_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/spacing_35dp"
                        android:layout_marginTop="@dimen/spacing_10dp"
                        android:layout_marginRight="@dimen/spacing_35dp"
                        android:layout_marginBottom="@dimen/spacing_8dp"
                        android:background="@drawable/member_zhongxin_text_1"
                        android:gravity="center"
                        android:paddingTop="@dimen/spacing_10dp"
                        android:paddingBottom="@dimen/spacing_10dp"
                        android:text="88元/年 立即开通" />

                    <LinearLayout
                        android:id="@+id/memeber_agreement_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/car_item_check_img"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_gravity="center"
                            android:src="@mipmap/shop_cat_icon_2_11" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/spacing_5dp"
                            android:text="请阅读并同意"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_10" />

                        <TextView
                            android:id="@+id/memeber_agreement_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:autoLink="web"
                            android:paddingTop="@dimen/spacing_1dp"
                            android:paddingBottom="@dimen/spacing_1dp"
                            android:text="《Vinnlook Plus会员服务协议》"
                            android:textColor="@color/them"
                            android:textSize="@dimen/text_10" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_8dp"
                        android:layout_marginBottom="@dimen/spacing_15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="按用户消费计算 一年预计省"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_12" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥2570"
                            android:textColor="#EFCC7E"
                            android:textSize="@dimen/text_12" />

                        <ImageView
                            android:layout_width="@dimen/spacing_11dp"
                            android:layout_height="@dimen/spacing_11dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/spacing_2dp"
                            android:background="@mipmap/memeber_img_icon_1" />

                    </LinearLayout>

                </LinearLayout>

                <!--                已购买会员-->
                <LinearLayout
                    android:id="@+id/memeber_yes_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/memeber_bg_22"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_20dp"
