<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/order_to_details_btn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/spacing_5dp"
    android:layout_marginTop="@dimen/spacing_5dp"
    android:layout_marginRight="@dimen/spacing_5dp"
    android:background="@drawable/me_bg2"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_15dp"
        android:layout_marginTop="@dimen/spacing_15dp"
        android:layout_marginRight="@dimen/spacing_15dp">

        <TextView
            android:id="@+id/order_item1_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="订单号：2020032214484967987"
            android:textColor="@color/black"
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/order_no_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/spacing_5dp"
            android:layout_toRightOf="@+id/order_item1_no"
            android:background="@drawable/me_bg2_them"
            android:paddingLeft="@dimen/spacing_5dp"
            android:paddingTop="@dimen/spacing_2dp"
            android:paddingRight="@dimen/spacing_5dp"
            android:paddingBottom="@dimen/spacing_2dp"
            android:text="复制"
            android:textColor="@color/them"
            android:textSize="@dimen/text_12" />

        <TextView
            android:id="@+id/order_item1_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text=""
            android:textColor="@color/them"
            android:textSize="@dimen/text_14" />
    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/orderlist_item1_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/spacing_15dp"
        android:layout_marginTop="@dimen/spacing_10dp"
        android:layout_marginRight="@dimen/spacing_15dp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_1dp"
        android:layout_marginTop="@dimen/spacing_5dp"
        android:background="@color/line" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_15dp"
        android:layout_marginTop="@dimen/spacing_10dp"
        android:layout_marginRight="@dimen/spacing_15dp">

        <TextView
            android:id="@+id/order_item1_total_number_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="共0件产品    实付：￥88.00"
            android:textColor="@color/order_text"
            android:textSize="@dimen/text_14" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/spacing_10dp"
            android:layout_marginBottom="@dimen/spacing_5dp">

            <TextView
                android:id="@+id/order_item1_shanchu_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/me_bg2_1"
                android:paddingLeft="@dimen/spacing_8dp"
                android:paddingTop="@dimen/spacing_3dp"
                android:paddingRight="@dimen/spacing_8dp"
                android:paddingBottom="@dimen/spacing_3dp"
                android:text="删除订单"
                android:textColor="@color/order_text1"
                android:textSize="@dimen/text_14"
                android:visibility="gone" />

            <TextView
                android:id="@+id/order_item1_quxiao_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/me_bg2_1"
                android:paddingLeft="@dimen/spacing_8dp"
                android:paddingTop="@dimen/spacing_3dp"
                android:paddingRight="@dimen/spacing_8dp"
                android:paddingBottom="@dimen/spacing_3dp"
                android:text="取消订单"
                android:textColor="@color/order_text1"
                android:textSize="@dimen/text_14" />

            <TextView
                android:id="@+id/order_item1_pay_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_15dp"
                android:layout_toRightOf="@+id/order_item1_quxiao_btn"
                android:background="@drawable/me_bg2_1_2"
                android:paddingLeft="@dimen/spacing_8dp"
                android:paddingTop="@dimen/spacing_3dp"
                android:paddingRight="@dimen/spacing_8dp"
                android:paddingBottom="@dimen/spacing_3dp"
                android:text="立即支付"
                android:textColor="@color/them"
                android:textSize="@dimen/text_14"
                android:visibility="gone" />


            <TextView
                android:id="@+id/order_item1_see_wuliu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_15dp"
                android:layout_toRightOf="@+id/order_item1_pay_btn"
                android:background="@drawable/me_bg2_1"
                android:paddingLeft="@dimen/spacing_8dp"
                android:paddingTop="@dimen/spacing_3dp"
                android:paddingRight="@dimen/spacing_8dp"
                android:paddingBottom="@dimen/spacing_3dp"
                android:text="查看物流"
                android:textColor="@color/order_text1"
                android:textSize="@dimen/text_14" />

            <TextView
                android:id="@+id/order_item1_shouhuo_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_15dp"
                android:layout_toRightOf="@+id/order_item1_see_wuliu"
                android:background="@drawable/me_bg2_1"
                android:paddingLeft="@dimen/spacing_8dp"
                android:paddingTop="@dimen/spacing_3dp"
                android:paddingRight="@dimen/spacing_8dp"
                android:paddingBottom="@dimen/spacing_3dp"
                android:text="确认收货"
                android:textColor="@color/order_text1"
                android:textSize="@dimen/text_14" />


            <TextView
                android:id="@+id/order_item1_tuihuan_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_15dp"
                android:layout_toRightOf="@+id/order_item1_shouhuo_btn"
                android:background="@drawable/me_bg2_1"
                android:paddingLeft="@dimen/spacing_8dp"
                android:paddingTop="@dimen/spacing_3dp"
                android:paddingRight="@dimen/spacing_8dp"
                android:paddingBottom="@dimen/spacing_3dp"
                android:text="批量退款"
                android:textColor="@color/order_text1"
                android:textSize="@dimen/text_14"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>