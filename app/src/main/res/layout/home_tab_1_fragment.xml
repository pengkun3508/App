<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/smart_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ScrollView
            android:id="@+id/home_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.youth.banner.Banner
                        android:id="@+id/banner_1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@color/white" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/viewpage_layout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/title_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_5dp"
                        android:overScrollMode="never"
                        android:scrollbars="none" />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/huodong2_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_20dp"
                    android:layout_marginRight="@dimen/spacing_20dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_20dp">

                    <com.youth.banner.Banner
                        android:id="@+id/banner_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        app:banner_indicator_marginTop="500dp" />
                </RelativeLayout>


                <ImageView
                    android:id="@+id/huodong_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_20dp" />

                <LinearLayout
                    android:id="@+id/xianshi_title_relayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_15dp"
                    android:layout_marginTop="@dimen/spacing_5dp"
                    android:layout_marginBottom="@dimen/spacing_3dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="距结束："
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_12" />

                        <TextView
                            android:id="@+id/home_xianshi_time_text_days"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/home_xianshi_time_text_bg"
                            android:paddingLeft="@dimen/spacing_2dp"
                            android:paddingRight="@dimen/spacing_2dp"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_13" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/spacing_3dp"
                            android:text="天"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_12" />

                        <TextView
                            android:id="@+id/home_xianshi_time_text_hours"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/spacing_3dp"
                            android:background="@drawable/home_xianshi_time_text_bg"
                            android:paddingLeft="@dimen/spacing_2dp"
                            android:paddingRight="@dimen/spacing_2dp"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_13" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/spacing_3dp"
                            android:text="时"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_12" />

                        <TextView
                            android:id="@+id/home_xianshi_time_text_minutes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/spacing_3dp"
                            android:background="@drawable/home_xianshi_time_text_bg"
                            android:paddingLeft="@dimen/spacing_2dp"
                            android:paddingRight="@dimen/spacing_2dp"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_13" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/spacing_3dp"
                            android:text="分"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_12" />

                        <TextView
                            android:id="@+id/home_xianshi_time_text_seconds"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/spacing_3dp"
                            android:background="@drawable/home_xianshi_time_text_bg"
                            android:paddingLeft="@dimen/spacing_2dp"
                            android:paddingRight="@dimen/spacing_2dp"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_13" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/spacing_3dp"
                            android:text="秒"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_12" />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/discount_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_5dp"
                        android:overScrollMode="never"
                        android:scrollbars="none" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:descendantFocusability="blocksDescendants">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_paoqi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"
                        android:scrollbars="none" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/recommend_img"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_60dp"
                    android:layout_marginLeft="@dimen/spacing_20dp"
                    android:layout_marginTop="@dimen/spacing_10dp"
                    android:layout_marginRight="@dimen/spacing_20dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_10dp"
                    android:layout_marginTop="@dimen/spacing_10dp"
                    android:layout_marginRight="@dimen/spacing_10dp">

                    <com.youth.banner.Banner
                        android:id="@+id/banner_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F6F6F6"
                    android:descendantFocusability="blocksDescendants">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_recommend"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"
                        android:scrollbars="none" />
                </RelativeLayout>


            </LinearLayout>
        </ScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>