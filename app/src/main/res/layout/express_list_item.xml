<?xml version="1.0" encoding="utf-8"?>
<com.flyco.roundview.RoundRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/spacing_10dp"
    app:rv_backgroundColor="@color/white"
    app:rv_cornerRadius="@dimen/spacing_10dp">

    <com.flyco.roundview.RoundRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingLeft="@dimen/spacing_15dp"
        android:paddingTop="@dimen/spacing_10dp"
        android:paddingRight="@dimen/spacing_15dp"
        android:paddingBottom="@dimen/spacing_10dp">

        <ImageView
            android:id="@+id/express_item_img"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/spacing_15dp"
            android:layout_toRightOf="@+id/express_item_img"
            android:orientation="vertical">

            <TextView
                android:id="@+id/express_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="某某快递"
                android:textColor="@color/black"
                android:textSize="@dimen/text_16" />

            <TextView
                android:id="@+id/express_shuoming_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自营仓满X处理方式"
                android:textColor="#A0A0A1"
                android:textSize="@dimen/text_12" />


        </LinearLayout>

        <TextView
            android:id="@+id/express_price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="￥10"
            android:textColor="#443A52"
            android:textSize="@dimen/text_16" />


    </com.flyco.roundview.RoundRelativeLayout>

</com.flyco.roundview.RoundRelativeLayout>