<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginEnd="15dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_coupon_bg_layout"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="@mipmap/coupon_bg_1">

        <TextView
            android:id="@+id/coupon_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="30dp"
            android:text="5折"
            android:textColor="@color/white"
            android:textSize="@dimen/text_16" />

<!--        <LinearLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_centerVertical="true"-->
<!--            android:layout_marginLeft="@dimen/spacing_120dp"-->
<!--            android:layout_marginRight="@dimen/spacing_75dp"-->
<!--            android:orientation="vertical">-->

            <TextView
                android:id="@+id/coupon_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全场满200减40"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/spacing_120dp"
                android:layout_marginRight="@dimen/spacing_75dp"
                android:textColor="@color/white"
                android:textSize="@dimen/text_14" />
<!--        </LinearLayout>-->
        <TextView
            android:id="@+id/coupon_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2020-07-20 10:34:11-2020-07-24 00:00:00"
            android:layout_marginTop="@dimen/spacing_10dp"
            android:layout_marginLeft="@dimen/spacing_120dp"
            android:layout_below="@+id/coupon_name"
            android:textColor="@color/white"
            android:textSize="10sp" />


        <TextView
            android:id="@+id/coupon_btn"
            android:layout_width="55dp"
            android:layout_height="23dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="领取"
            android:textColor="@color/them"
            android:textSize="@dimen/text_14" />
    </RelativeLayout>
</LinearLayout>