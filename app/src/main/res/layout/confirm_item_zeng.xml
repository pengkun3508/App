<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/spacing_5dp"
    android:layout_marginBottom="@dimen/spacing_5dp"
    android:background="@drawable/confirm_item_zeng_bg">


    <com.flyco.roundview.RoundRelativeLayout
        android:id="@+id/rl_product_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_10dp"
        android:layout_marginTop="@dimen/spacing_5dp"
        android:layout_marginRight="@dimen/spacing_10dp"
        android:layout_marginBottom="@dimen/spacing_5dp">

        <TextView
            android:id="@+id/item_zeng_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/confirm_item_zeng_text_bg"
            android:paddingLeft="@dimen/spacing_4dp"
            android:paddingTop="@dimen/spacing_1dp"
            android:paddingRight="@dimen/spacing_4dp"
            android:paddingBottom="@dimen/spacing_1dp"
            android:text="赠品"
            android:textColor="#FF0000"
            android:textSize="@dimen/text_10" />

        <com.flyco.roundview.RoundLinearLayout
            android:id="@+id/ll_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/spacing_10dp"
            android:layout_toRightOf="@+id/item_zeng_text"
            app:rv_cornerRadius="2dp"
            app:rv_strokePressColor="@color/line"
            app:rv_strokeWidth="1dp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/confirm_order_img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:riv_corner_radius="@dimen/spacing_10dp" />
        </com.flyco.roundview.RoundLinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="@dimen/spacing_5dp"
            android:layout_toEndOf="@+id/ll_img"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/confirm_order_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/classify_supi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/classify_list_item"
                    android:paddingLeft="@dimen/spacing_5dp"
                    android:paddingRight="@dimen/spacing_5dp"
                    android:text="自营"
                    android:textSize="@dimen/text_10"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/confirm_order_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="2"
                    android:text="日本美瞳Topards日抛型10枚彩色 隐形眼镜"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_12" />

            </RelativeLayout>


            <TextView
                android:id="@+id/confirm_order_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/confirm_order_name_layout"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/spacing_5dp"
                android:layout_toEndOf="@+id/ll_img"
                android:text="分类：100度、refrear、30片"
                android:textColor="@color/shop_text"
                android:textSize="@dimen/text_10" />


            <RelativeLayout
                android:id="@+id/type_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_5dp">

                <TextView
                    android:id="@+id/confirm_order_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X1"
                    android:textColor="@color/shop_text"
                    android:textSize="@dimen/text_10" />

                <LinearLayout
                    android:id="@+id/item_zeng_select_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/spacing_3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/confirm_item_zeng_text_bg"
                        android:paddingLeft="@dimen/spacing_5dp"
                        android:paddingTop="@dimen/spacing_2dp"
                        android:paddingRight="@dimen/spacing_5dp"
                        android:paddingBottom="@dimen/spacing_2dp"
                        android:text="选择规格"
                        android:textColor="#FF0000"
                        android:textSize="10sp" />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </com.flyco.roundview.RoundRelativeLayout>


</LinearLayout>