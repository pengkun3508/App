<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_5dp">

        <ImageView
            android:id="@+id/move_group_item_img"
            android:layout_width="@dimen/spacing_30dp"
            android:layout_height="@dimen/text_30"
            android:layout_centerVertical="true"
            android:background="@color/them"/>

        <TextView
            android:id="@+id/move_group_item_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/spacing_10dp"
            android:layout_toRightOf="@+id/move_group_item_img"
            android:text="测试"
            android:textColor="@color/black"
            android:textSize="@dimen/text_12" />

        <ImageView
            android:id="@+id/move_group_item_jian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/spacing_10dp"
            android:src="@mipmap/move_group_member_icon_2"/>

    </RelativeLayout>


</LinearLayout>