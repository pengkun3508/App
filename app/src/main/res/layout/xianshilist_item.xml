<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_2dp"
    android:background="@drawable/paoqi_item_bg"
    android:orientation="vertical"
    android:paddingLeft="0.5dp"
    android:paddingRight="0.5dp">

<!--    <FrameLayout-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_centerHorizontal="true"-->
<!--        android:layout_marginLeft="@dimen/spacing_10dp"-->
<!--        android:layout_marginTop="@dimen/spacing_5dp">-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/home_adapter_bg_line"
            android:layout_gravity="center"
            android:padding="@dimen/spacing_1dp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/xianshi_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:riv_corner_radius="@dimen/spacing_12dp" />

        </LinearLayout>


<!--        <ImageView-->
<!--            android:layout_width="@dimen/spacing_20dp"-->
<!--            android:layout_height="@dimen/spacing_20dp"-->
<!--            android:layout_marginLeft="@dimen/spacing_20dp"-->
<!--            android:background="@mipmap/home_xs_image3"-->
<!--            android:visibility="gone" />-->


<!--    </FrameLayout>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_5dp"
        android:layout_marginRight="@dimen/spacing_5dp"
        android:layout_marginBottom="@dimen/spacing_5dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/classify_supi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/classify_list_item"
                android:paddingLeft="@dimen/spacing_7dp"
                android:paddingRight="@dimen/spacing_7dp"
                android:text="自营"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/xianshi_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/classify_supi"
                android:layout_marginTop="@dimen/spacing_18dp"
                android:ellipsize="end"
                android:lines="2"
                android:text="日本美瞳Limoon月抛"
                android:textColor="@color/black"
                android:textSize="@dimen/text_14" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/xianshi_jiage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="￥145.00"
                android:textColor="@color/them"
                android:textSize="@dimen/text_12" />

            <TextView
                android:id="@+id/xianshi_yuanjia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_5dp"
                android:text="￥145.00"
                android:textColor="@color/iron"
                android:textSize="@dimen/text_12"
                android:visibility="gone" />

            <TextView
                android:id="@+id/home_add_xianshi_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/home_xianshi_qianggo_item_2"
                android:paddingLeft="@dimen/spacing_5dp"
                android:paddingRight="@dimen/spacing_5dp"
                android:text="抢Go"
                android:textColor="@color/black" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_5dp"
            android:orientation="horizontal"
            android:visibility="gone">


            <TextView
                android:id="@+id/xianshi_hour"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/count"
                android:text="00"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="@color/black"
                android:visibility="gone" />

            <TextView
                android:id="@+id/xianshi_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/count"
                android:text="00"
                android:textColor="@color/black"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="@color/black"
                android:visibility="gone" />

            <TextView
                android:id="@+id/xianshi_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/count"
                android:text="00"
                android:textColor="@color/black"
                android:visibility="gone" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>