<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:id="@+id/paoqi_item_layout_btn"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/paoqi_item_img"
        android:layout_width="@dimen/spacing_100dp"
        android:layout_height="@dimen/spacing_100dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_5dp"
        android:layout_marginRight="@dimen/spacing_5dp"
        android:layout_marginBottom="@dimen/spacing_5dp"
        android:gravity="center"
        android:orientation="vertical">


        <com.vinnlook.www.utils.AutoSplitTextView
            android:id="@+id/paoqi_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_5dp"
            android:gravity="center"
            android:text="EnvieEnvieEnvie"
            android:textColor="@color/black"
            android:textSize="@dimen/text_14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/discount_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_5dp"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:text="asdadasdasdasd"
            android:textColor="#3E3A39"
            android:textSize="@dimen/text_12" />

        <TextView
            android:id="@+id/paoqi_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_5dp"
            android:gravity="center"
            android:text="175.00"
            android:textColor="#C51710"
            android:textSize="@dimen/text_14" />
    </LinearLayout>
</LinearLayout>