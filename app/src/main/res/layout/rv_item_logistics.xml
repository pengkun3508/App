<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingEnd="20dp">

    <View
        android:id="@+id/view"
        android:layout_width="1dp"
        android:layout_height="25dp"
        android:layout_marginStart="9.5dp"
        android:background="@color/them" />

    <LinearLayout
        android:id="@+id/quanquan"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/view"
        android:background="@mipmap/shop_cat_icon_2"
        android:gravity="center">

        <com.flyco.roundview.RoundTextView
            android:id="@+id/iv_img"
            android:layout_width="10dp"
            android:layout_height="10dp"
            app:rv_backgroundColor="@color/them"
            app:rv_cornerRadius="999dp" />
    </LinearLayout>


    <View
        android:id="@+id/view2"
        android:layout_width="1dp"
        android:layout_height="85dp"
        android:layout_below="@+id/quanquan"
        android:layout_marginStart="9.5dp"
        android:layout_marginTop="0dp"
        android:background="@color/them" />

    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_25dp"
        android:layout_toRightOf="@+id/quanquan"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:text="2019-12-2 16:20"
            android:textColor="@color/text_black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="7dp"
            android:text="您的订单正在派送中，请耐心等待。"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_12" />

    </LinearLayout>
</RelativeLayout>