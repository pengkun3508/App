<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.flyco.roundview.RoundLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退款信息"
            android:textColor="@color/black"
            android:textSize="@dimen/text_16"
            android:textStyle="bold"
            android:visibility="gone"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/apply_details_img"
                android:layout_width="@dimen/spacing_95dp"
                android:layout_height="@dimen/spacing_95dp"
                app:riv_corner_radius="@dimen/spacing_10dp" />

            <LinearLayout
                android:id="@+id/shouhou_relayou"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_10dp"
                android:layout_toRightOf="@+id/apply_details_img"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/classify_supi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/classify_list_item"
                        android:paddingLeft="@dimen/spacing_7dp"
                        android:paddingRight="@dimen/spacing_7dp"
                        android:text="自营"
                        android:textColor="@color/white" />


                    <TextView
                        android:id="@+id/apply_details_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lines="2"
                        android:text="日本美瞳日抛日本美瞳日抛日本美瞳日抛"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_14" />
                </RelativeLayout>


                <TextView
                    android:id="@+id/apply_details_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_10dp"
                    android:text="light peach,10枚,-575"
                    android:layout_marginLeft="@dimen/spacing_10dp"
                    android:textColor="#727171"
                    android:textSize="@dimen/text_12" />

            </LinearLayout>

            <TextView
                android:id="@+id/apply_details_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/spacing_5dp"
                android:text="x1"
                android:textColor="#727171"
                android:textSize="@dimen/text_12" />


        </RelativeLayout>



    </com.flyco.roundview.RoundLinearLayout>


</LinearLayout>