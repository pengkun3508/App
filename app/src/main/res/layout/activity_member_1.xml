        app:abs_back_icon="@mipmap/back_white"
        app:abs_title="会员中心"
        app:abs_title_text_color="@color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="none"
        android:overScrollMode="never"
        android:padding="@dimen/spacing_1dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_20dp">

                <RelativeLayout
                    android:layout_width="@dimen/spacing_60dp"
                    android:layout_height="@dimen/spacing_60dp"
                    android:gravity="center">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/memeber_heart"
                        android:layout_width="@dimen/spacing_50dp"
                        android:layout_height="@dimen/spacing_50dp"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:src="@mipmap/icon_heart"
                        app:riv_corner_radius="999dp" />


                    <ImageView
                        android:id="@+id/memeber_huiyuan_biaozhi1"
                        android:layout_width="@dimen/spacing_20dp"
                        android:layout_height="@dimen/spacing_20dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/spacing_5dp"
                        android:background="@mipmap/memeber_img_icon23" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/memeber_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/spacing_15dp"
                        android:text="会员名称"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_15"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/memeber_huiyuan_biaozhi2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/spacing_10dp"
                        android:layout_marginTop="@dimen/spacing_5dp"
                        android:layout_toRightOf="@+id/memeber_user_name"
                        android:background="@mipmap/memeber_img_icon24"
                        android:paddingLeft="@dimen/spacing_5dp"
                        android:paddingRight="@dimen/spacing_5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Plus会员"
                            android:textColor="#714F29"
                            android:textSize="@dimen/text_10" />

                    </LinearLayout>


                    <TextView
                        android:id="@+id/memeber_huiyuan_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/memeber_user_name"
                        android:layout_alignLeft="@+id/memeber_user_name"
                        android:layout_marginTop="@dimen/spacing_5dp"
                        android:text="2020.10.26到期，可续费尊享会员"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_10" />

                </RelativeLayout>


            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_80dp"
                    android:background="@mipmap/memeber_bg_new_1"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_140dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="3dp"
                            android:layout_height="3dp"
                            android:layout_marginLeft="@dimen/spacing_5dp"
                            android:layout_marginRight="@dimen/spacing_10dp"
                            android:background="@drawable/memeber_img_raidus" />

                        <ImageView
                            android:layout_width="4dp"
                            android:layout_height="4dp"
                            android:layout_marginLeft="@dimen/spacing_5dp"
                            android:layout_marginRight="@dimen/spacing_10dp"
                            android:background="@drawable/memeber_img_raidus" />

                        <ImageView
                            android:layout_width="5dp"
                            android:layout_height="5dp"
                            android:layout_marginLeft="@dimen/spacing_5dp"
                            android:layout_marginRight="@dimen/spacing_10dp"
                            android:background="@drawable/memeber_img_raidus" />

                        <TextView
